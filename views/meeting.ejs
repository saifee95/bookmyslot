<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Jekyll v3.8.5">
    <title>Meeting</title>

    <!-- Bootstrap core CSS -->
    <link rel='stylesheet' href='/stylesheets/slots.css'/>
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
  </head>
  <body class="text-center">
    <div style="text-align: right">
      <a href='/users/logout'><button class="btn btn-lg btn-primary" style="float: right;" type="button">Logout</button></a>
    </div>  
    <form class="form-signin" method="post">
      <% if(errors) { %>
    <% for(var i=0; i < errors.length; i++) { %>
      <div class="alert alert-danger"><%= errors[i].msg %></div>
    <% } %>
  <% } %>
  <h1 class="h3 mb-3 font-weight-normal">Please fill meeting details</h1>
  <label for="title" class="sr-only">Title</label>
  <input type="text" name="title" id="title" class="form-control" placeholder="Title" autofocus>
  <label for="userid" class="sr-only">Recipient Userid</label>
  <input type="text" name="userid" id="userid" class="form-control" placeholder="Username" autofocus>
  <label for="date" class="sr-only">Date</label>
  <input type="text" name="date" id="date" class="form-control" placeholder="Date" autofocus>
  <label for="slot" class="sr-only">Slot</label>
  <input type="number" name="slot" id="slot" class="form-control" placeholder="Slot" autofocus>
  <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
</form>
</body>
</html>
